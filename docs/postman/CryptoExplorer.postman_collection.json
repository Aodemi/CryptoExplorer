{
  "info": {
    "_postman_id": "7f6d5c2e-41a0-4f3b-8c31-cryptoexplorer-local",
    "name": "CryptoExplorer Local",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Local API requests for CryptoExplorer: register, login, seed, and crypto GETs."
  },
  "item": [
    {
      "name": "Auth / Register",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const ts = Date.now();",
              "pm.variables.set('regEmail', `alice+${ts}@test.dev`);",
              "pm.variables.set('regUsername', `alice${ts}`);",
              "if (!pm.environment.get('password')) pm.environment.set('password', 'Passw0rd!');"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 201/200', function () {",
              "  pm.expect(pm.response.code === 201 || pm.response.code === 200).to.be.true;",
              "});",
              "try {",
              "  const json = pm.response.json();",
              "  if (json.token) pm.environment.set('token', json.token);",
              "} catch (e) {}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{regEmail}}\",\n  \"username\": \"{{regUsername}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      }
    },
    {
      "name": "Auth / Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "try {",
              "  const json = pm.response.json();",
              "  if (json.token) pm.environment.set('token', json.token);",
              "} catch (e) {}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{regEmail}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      }
    },
    {
      "name": "Seed / Convert To New Model (protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/markets/convertToNewModel", "host": ["{{baseUrl}}"], "path": ["markets", "convertToNewModel"] },
        "body": { "mode": "raw", "raw": "{\n  \"vs_currency\": \"usd\"\n}" }
      }
    },
    {
      "name": "Cryptos / Get (protected)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/cryptos", "host": ["{{baseUrl}}"], "path": ["cryptos"] }
      }
    },
    {
      "name": "Cryptos / Public DB list",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/cryptos/api?limit=10", "host": ["{{baseUrl}}"], "path": ["cryptos", "api"], "query": [ { "key": "limit", "value": "10" } ] }
      }
    },
    {
      "name": "Cryptos / Search (public)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/cryptos/search/bitcoin", "host": ["{{baseUrl}}"], "path": ["cryptos", "search", "bitcoin"] }
      }
    },
    {
      "name": "Cryptos / Analyse (public but requires data)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/cryptos/analyse/bitcoin?period=7", "host": ["{{baseUrl}}"], "path": ["cryptos", "analyse", "bitcoin"], "query": [ { "key": "period", "value": "7" } ] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001/api" }
  ]
}
